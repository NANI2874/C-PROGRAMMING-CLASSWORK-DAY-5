#include <stdio.h>
#include <string.h>

int main() {
    char word[100];  
    char reversed_word[100];  
    int i, j;

    printf("Enter a word: ");
    scanf("%s", word); 
    j = strlen(word) - 1;  

    for (i = 0; i < strlen(word); i++) {
        reversed_word[i] = word[j];  
        j--;  
    }

    reversed_word[i] = '\0'; 

    printf("The reversed word is: %s\n", reversed_word);
    return 0;
}
